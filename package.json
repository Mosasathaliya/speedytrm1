{
  "name": "speed-of-mastery-rag",
  "version": "1.0.0",
  "description": "Speed of Mastery English Learning App with RAG System on Cloudflare",
  "main": "src/worker/index.ts",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "deploy:worker": "npx wrangler deploy",
    "deploy:staging": "npx wrangler deploy --env staging",
    "deploy:production": "npx wrangler deploy --env production",
    "db:create": "npx wrangler d1 create speed-of-mastery-db",
    "db:migrate": "npx wrangler d1 execute speed-of-mastery-db --file=./schema.sql",
    "db:list": "npx wrangler d1 list",
    "r2:create": "npx wrangler r2 bucket create speed-of-mastery-lessons",
    "vectorize:create": "npx wrangler vectorize create speed-of-mastery-lessons --dimensions=768"
  },
  "keywords": [
    "english-learning",
    "arabic-speakers",
    "rag-system",
    "cloudflare-workers",
    "ai-powered-learning"
  ],
  "author": "Speed of Mastery Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "wrangler": "^4.29.1"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
